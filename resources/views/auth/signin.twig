{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col s6">
			<div class="login_infos">
				<h4 class="infos__title">
					// Todo :
				</h4>
				<p class="infos__text">
				<ul class="collection">
					<li class="collection-item">UI</li>
					<li class="collection-item">Database</li>
					<li class="collection-item">User</li>
					<li class="collection-item">Login</li>
				</ul>
				</p>
			</div>
		</div>
		<div class="col s6">
			<form class="login__form" action="{{ path_for('auth.signin') }}" method="post">
				<div class="input-field {{ errors.email ? ' error' : '' }}">
					<label for="email">E-mail</label>
					<input type="email" name="email" class="validate" id="email" value="{{ old.email }}">
                    {% if errors.email %}
						<span class="help">{{ errors.email | first }}</span>
                    {% endif %}
				</div>

				<div class="input-field {{ errors.password ? ' error' : '' }}">
					<label for="password">Mot de passe</label>
					<input type="password" name="password" class="validate" id="password">
                    {% if errors.password %}
						<span class="help">{{ errors.password | first }}</span>
                    {% endif %}
				</div>
				<button type="submit" class="btn">Connexion</button>

                {{ csrf.field | raw }}
			</form>
		</div>
	</div>
{% endblock %}